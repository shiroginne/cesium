<h1>New page part</h1>
<% form_for @page_part, :url => admin_page_page_parts_url(@page) do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>
<% end %>
<% content_for :additional_navigation do %>
  <li><%= link_to @page.title, edit_admin_page_path(@page) %></li>
  <li class="arrow">
    <ul>
      <% @page.page_parts.each do |part| %>
      <li>
        <%= link_to "Edit part \"#{part.name}\"", edit_admin_page_page_part_path(@page, part) %>
        <%= link_to image_tag('admin/remove.png'), admin_page_page_part_path(@page, part), :method => :delete, :confirm => 'Are you sure?' %>
      </li>
      <% end %>
    </ul>
  </li>
  <li>new part</li>
<% end %>
