<div class="info">
  <% if page.path != '/' %>
    <div class="handle"></div>
  <% end %>
  <span class="page_name"><%= link_to page.title, edit_admin_page_path(page) %></span>
  <div class="actions">
    <span class="page_status"><%= status_select page %></span>
    <%= link_to 'view page', cesium_path(page.path.to_path_params), :class => 'view_entry' %>
    <%= link_to 'new child', new_sub_admin_page_path(page) %>
    <%= link_to_remote 'destroy', { :url => admin_page_path(page), :method => :delete, :confirm => 'Are u shure?' } %>
  </div>
</div>
