page["page_#{@page.id}"].remove
page << <<-SCRIPT
  clearEmptyContainers();
  if ($('pages_tree').empty()) {
    $('additional_navigation').innerHTML += '#{link_to('New page', new_admin_page_path)}';
  }
SCRIPT
if @parent.leaf?
  page << <<-SCRIPT
    var ec = $$('#page_#{@parent.id} .expand_collapse');
    if (ec[0]) {
      ec[0].update('');
    }
  SCRIPT
end
