<h1>Edit page</h1>
<% form_for @page, :url => admin_page_path(@page) do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>
<% end %>
<% content_for :additional_navigation do %>
  <li><%= @page.title %></li>
  <li class="arrow">
    <ul>
      <li class="underlined"><%= link_to "New page part", new_admin_page_page_part_path(@page) %></li>
      <% @page.page_parts.each do |part| %>
      <li>
        <%= link_to part.name, edit_admin_page_page_part_path(@page, part) %>
        <%= link_to 'destroy', admin_page_page_part_path(@page, part), :method => :delete, :confirm => 'Are you sure?' %>
      </li>
      <% end %>
    </ul>
  </li>
<% end %>
