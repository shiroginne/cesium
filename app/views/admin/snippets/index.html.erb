<h1>Snippets</h1>
<ul class="pages_tree">
<% @snippets.each do |snippet| %>
  <li>
    <div class="info">
      <%= link_to snippet.name, edit_admin_snippet_url(snippet) %>
      <div class="actions">
        <%= link_to 'destroy', admin_snippet_url(snippet), :method => :delete, :confirm => 'Are u shure?', :class => 'remove_entry' %>
      </div>
    </div>
  </li>
<% end %>
</ul>
<div class="add_entry">
  <%= link_to 'new snippet', new_admin_snippet_url, :class => 'new_entry' %>
</div>