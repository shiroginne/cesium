<h1>Show <%= controller.model_name.humanize.downcase %></h1>
<ul class="show_entry">
<% controller.show_fields.each do |field| -%>
  <li>
    <h2><%= field.label %></h2>
    <div>
      <%= h(@record.call_chain(field.name)) %>
    </div>
  </li>
<% end -%>
</ul>
<% content_for :additional_navigation do %>
  <ul class="buttons">
    <li><%= link_to "Edit #{controller.model_name.humanize.downcase}", edit_polymorphic_path([:admin, @record]) %></li>
    <li><%= link_to "Destroy #{controller.model_name.humanize.downcase}", [:admin, @record], :method => :delete, :confirm => "Are you sure?" %></li>
  </ul>
<% end %>
