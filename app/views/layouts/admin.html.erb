<?xml version='1.0' encoding='utf-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html>
  <head>
    <%= stylesheet_link_tag 'reset' %>
    <%= stylesheet_link_tag 'admin' %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag '/codemirror/js/codemirror' %>
    <%= javascript_include_tag 'admin' %>
  </head>
  <body>
    <div class="header">
      <div class="logo"><a href="/admin">ะช</a></div>
      <% if current_user && current_user.admin %>
      <div class="links">
        <%= link_to 'Pages', admin_pages_url, :class => request.path.include?('/admin/pages') || request.path == '/admin' || request.path == '/admin/' ? "selected" : "" %>
        <%= link_to 'Layouts', admin_layouts_url, :class => request.path.include?('/admin/layouts') ? "selected" : "" %>
        <%= link_to 'Snippets', admin_snippets_url, :class => request.path.include?('/admin/snippets') ? "selected" : "" %>
        <%= link_to 'Users', admin_users_url, :class => request.path.include?('/admin/users') ? "selected" : "" %>
      </div>
      <% end %>
      <% if current_user_session %>
      <div class="logout">
        <%= link_to 'logout', logout_url, :method => :delete %>
      </div>
      <% end %>
    </div>
    <div class="body">
      <% if flash[:notice] %>
        <div class="notice" id="notice"><%= flash[:notice] %></div>
      <% end %>
<%#= snippet 'f' %>
      <%= yield %>
    </div>
  </body>
</html>