<?xml version='1.0' encoding='utf-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <%= stylesheet_link_tag 'reset' %>
    <%= stylesheet_link_tag 'admin' %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag '/codemirror/js/codemirror' %>
    <%= javascript_include_tag 'tabs' %>
    <%= javascript_include_tag 'admin' %>
  </head>
  <body>
    <div class="header">
      <div class="logo"><a href="/admin">Cesium</a></div>
      <% if cesium_admin %>
      <ul class="navigation">
        <% admined_controllers do |title, url| %>
          <li<%= request.path.include?(url) ? ' class="selected"' : '' %>><%= link_to title, url %></li>
        <% end %>
      </ul>
      <% end %>
      <% if cesium_admin_session %>
      <div class="logout">
        <%= link_to 'logout', admin_logout_url, :method => :delete %>
      </div>
      <% end %>
    </div>
    <ul class="additional_navigation" id="additional_navigation">
      <%= yield :additional_navigation %>
    </ul>
    <div class="body">
      <%= yield %>
    </div>
    <% if flash[:notice] %>
      <div class="notice" id="notice"><%= flash[:notice] %></div>
    <% end %>
  </body>
</html>
